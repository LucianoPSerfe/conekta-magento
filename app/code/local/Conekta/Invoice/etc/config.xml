<?xml version="1.0"?>
<config>
    <modules>
        <Conekta_Invoice>
            <version>0.1.0</version>
        </Conekta_Invoice>
    </modules>
    <frontend>
		<routers>
            <invoice>
                <use>standard</use>
                <args>
                    <module>Conekta_Invoice</module>
                    <frontName>invoice</frontName>
                </args>
            </invoice>
            <checkout>
                <args>
                <modules>
					<Conekta_Invoice before="Mage_Checkout">Conekta_Invoice</Conekta_Invoice>
                </modules>
                </args>
            </checkout>
        </routers>
        <layout>
            <updates>
                <invoice>
                    <file>invoice.xml</file>
                </invoice>
            </updates>
        </layout>
    </frontend>
</config>
